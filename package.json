{
  "name": "Alone-Tools",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "electron:dev": "cross-env NODE_ENV=development concurrently vite \"nodemon --watch . --exec electron .\"",
    "build:pro": "cross-env NODE_ENV=production pnpm run build && electron-builder",
    "build:win": "cross-env NODE_ENV=production pnpm run build && electron-builder --win",
    "build:mac": "cross-env NODE_ENV=production pnpm run build && electron-builder --mac",
    "build:linux": "cross-env NODE_ENV=production pnpm run build && electron-builder --linux",
    "rebuild": "cross-env NODE_ENV=production pnpm run build && electron-builder --win"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.12",
    "monaco-editor": "^0.49.0",
    "pinia": "^3.0.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^37.3.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "globals": "^16.0.0",
    "naive-ui": "^2.41.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "sass": "^1.89.0",
    "terser": "^5.44.0",
    "vite": "^5.2.0",
    "vite-plugin-vue-devtools": "^7.7.2"
  },
  "author": {
    "name": "Alone",
    "email": "aloneJ@111.com"
  },
  "build": {
    "appId": "com.example.devtools",
    "productName": "ATools",
    "files": [
      "electron/**/*",
      "dist/**/*",
      "build/**/*",
      "package.json",
      "!node_modules/**/*",
      "!src/**/*",
      "!public/**/*",
      "!*.md",
      "!*.config.js",
      "!*.config.ts",
      "!.eslintrc*",
      "!.prettierrc*",
      "!.gitignore",
      "!pnpm-lock.yaml",
      "!yarn.lock",
      "!package-lock.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ATools",
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.ico"
    }
  }
}